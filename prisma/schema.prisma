generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Atleta {
  id      Int     @id @default(autoincrement())
  nome    String  @db.VarChar(50)
  idade   Int
  peso    Decimal @db.Decimal(5, 2)
  altura  Int
  esporte String  @db.VarChar(50)

  testes Teste[]

  @@map("atletas")
}

model Teste {
  id                   Int      @id @default(autoincrement())
  data_exame           DateTime
  resultado_positivo   Boolean
  substancia_detectada String?  @db.VarChar(255)

  atleta    Atleta @relation(fields: [atleta_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  atleta_id Int

  @@map("testes_antidoping")
}
